<?xml version="1.0"?>
<!-- Revolute-Revolute Manipulator -->
<robot name="awagv" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="PI" value="3.1415926535897931"/>
  <xacro:property name="RIGHT_ANGLE" value="1.570796327"/>
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://awagv_description/meshes/awagv.stl" scale="1 1 1" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://awagv_description/meshes/awagv.stl" scale="1 1 1"/>
      </geometry>
    </collision>
   <inertial>
    <origin xyz="0 0 0"/>
    <mass value="15.0"/>
    <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
   </inertial>
  </link>

  <link name="left_wheel_link">
    <visual>
      <geometry>
        <mesh filename="package://awagv_description/meshes/agvwheel.stl" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black"/>
    </visual>

    <collision>
      <geometry>
        <mesh filename="package://awagv_description/meshes/agvwheel.stl" scale="1 1 1"/>
      </geometry>
    </collision>

   <inertial>
    <origin xyz="0 0 0"/>
    <mass value="1"/>
    <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
   </inertial>

  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="-0.28 0 0.055" rpy="0 0 ${RIGHT_ANGLE}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel_link">
    <visual>
      <geometry>
        <mesh filename="package://awagv_description/meshes/agvwheel.stl" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 ${-RIGHT_ANGLE*2}"/>
      <axis xyz="0 0 0"/>
      <material name="black"/>
    </visual>

    <collision>
      <geometry>
        <mesh filename="package://awagv_description/meshes/agvwheel.stl" scale="1 1 1"/>
      </geometry>
    </collision>

   <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
   </inertial>

  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0.28 0 0.055" rpy="0 0 ${RIGHT_ANGLE}"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="caster_link">
    <visual>
      <geometry>
        <sphere radius="0.055"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.055"/>
      </geometry>
    </collision>

   <inertial>
    <origin xyz="0 0 0"/>
    <mass value="0.500"/>
    <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001"  iyz="0" izz="0.0001"/>
   </inertial>

  </link>

  <joint name="caster_joint" type="fixed">
   <parent link="base_link"/>
   <child link="caster_link"/>
   <origin xyz="0 0.2 0.055"/>
 </joint>

 <link name="base_footprint"/>
  <joint name="base_link_joint" type="fixed">
   <parent link="base_footprint"/>
   <child link="base_link"/>
   <origin xyz="0 0 0" rpy="0 0 ${-RIGHT_ANGLE}"/>
 </joint>

  <!-- ===============  Transmission =============== -->
<transmission name="left_wheel_trans">
  <type>transmission_interface/SimpleTransmission</type>
  <joint name="left_wheel_joint">
    <hardwareInterface>VelocityJointInterface</hardwareInterface>
  </joint>
  <actuator name="left_wheel_motor">
    <hardwareInterface>VelocityJointInterface</hardwareInterface>
    <mechanicalReduction>30</mechanicalReduction>
  </actuator>
</transmission>
<transmission name="right_wheel_trans">
  <type>transmission_interface/SimpleTransmission</type>
  <joint name="right_wheel_joint">
    <hardwareInterface>VelocityJointInterface</hardwareInterface>
  </joint>
  <actuator name="right_wheel_motor">
    <hardwareInterface>VelocityJointInterface</hardwareInterface>
    <mechanicalReduction>30</mechanicalReduction>
  </actuator>
</transmission>

  <!-- =============== Gazebo =============== -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>awagv</robotNamespace>
    </plugin>
  </gazebo>

 <gazebo reference="base_link">
   <selfCollide>true</selfCollide>
    <mu1 value="0.05" />
    <mu2 value="0.05" />
  </gazebo>

 <gazebo reference="left_wheel_link">
   <selfCollide>true</selfCollide>
    <mu1 value="1.0" />
    <mu2 value="1.0" />
  </gazebo>

 <gazebo reference="right_wheel_link">
   <selfCollide>true</selfCollide>
    <mu1 value="1.0" />
    <mu2 value="1.0" />
  </gazebo>

 <gazebo reference="caster_link">
   <selfCollide>true</selfCollide>
     <!-- This caster is no frictional resistance. -->
    <mu1 value="0.0" />
    <mu2 value="0.0" />
  </gazebo>

</robot>
